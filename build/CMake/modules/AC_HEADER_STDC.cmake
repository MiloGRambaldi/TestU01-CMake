if( NOT DEFINED STDC_HEADERS )
	message( STATUS "Checking whether system has ANSI C header files" )

	include( CheckIncludeFiles )
	include( CheckSymbolExists )

	check_include_files( "stdlib.h;stdarg.h;string.h;float.h" StandardHeadersExist )
	if( StandardHeadersExist )
		check_symbol_exists( memchr string.h memchrExists )
		if( memchrExists )
			check_symbol_exists( free stdlib.h freeExists )
			if( freeExists )
				message( STATUS "ANSI C header files - found" )
				set( STDC_HEADERS 1 CACHE INTERNAL "System has ANSI C header files" )
				set(HAVE_STRING_H 1)
				set(HAVE_FLOAT_H 1)
				set(HAVE_STDLIB_H 1)
				set(HAVE_STDARG_H 1)
			else( freeExists )
				message( STATUS "prototype free not found in stdlib.h" )
			endif( freeExists )
		else( memchrExists )
			message( WARNING "prototype memchr not found in string.h" )
		endif( memchrExists)
	else( StandardHeadersExist )
		message( WARNING "standard header files not found" )
	endif( StandardHeadersExist )

	if( NOT STDC_HEADERS)
		message( WARNING "ANSI C header files - not found" )
		set( STDC_HEADERS 0 CACHE INTERNAL "System has ANSI C header files" )
	endif( NOT STDC_HEADERS )
endif( NOT DEFINED STDC_HEADERS )
